<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:background="@color/secondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/searchbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/buttontransparent"
                android:src="@drawable/searchicon"
                android:layout_marginEnd="48dp"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/money_manager"
                android:textSize="30sp" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        tools:ignore="MissingConstraints">


    </FrameLayout>


    <FrameLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/buttonWallet"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:src="@drawable/walletbutton" />

        <ImageButton
            android:id="@+id/buttonCard"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/button"
            android:src="@drawable/cardbutton" />

        <ImageButton
            android:id="@+id/buttonAnalyst"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/button"
            android:src="@drawable/analystbutton" />

        <ImageButton
            android:id="@+id/buttonExport"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button"
            android:src="@drawable/exportbutton" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="783dp"
        android:background="@drawable/roundBackgroundPrimary"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        tools:layout_editor_absoluteX="0dp">

        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/white" />

        <FrameLayout
            android:id="@+id/info"
            android:layout_width="380dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/card" />

        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="300dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="284dp"
            android:text="@string/riwayat"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="normal" />

        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="300dp"
            android:background="@color/white" />

        <FrameLayout
            android:id="@+id/riwayat1"
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="320dp"
            android:background="@drawable/card" />

        <FrameLayout
            android:id="@+id/riwayat2"
            android:layout_width="380dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="450dp"
            android:background="@drawable/card" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>